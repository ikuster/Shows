<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/loginSuccessLogo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_placeholder_registration"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="182dp"
    />
    <TextView android:id="@+id/welcomeMessage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/textSIze_6x"
              android:text="You're in!"
              android:textStyle="bold"
              app:layout_constraintTop_toBottomOf="@id/loginSuccessLogo"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginTop="@dimen/margin_2x"
              android:textColor="#2e2e2e"
    />
    <TextView
              android:id="@+id/welcomeUsername"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Welcome"
              android:textSize="@dimen/textSize_3x"
              app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginTop="@dimen/margin_9x"

    />

</androidx.constraintlayout.widget.ConstraintLayout>